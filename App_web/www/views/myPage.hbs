    <main>
      <div id="container">
        <div id="updateInfo">
          <p>Here you can update your personal information</p>
          <form>
            <fieldset>
              <legend>Personal Information</legend>
              <label for="email">Email:</label>
              <input type="email" id="email" name="email" required><br><br>

              <label for="dob">Date of Birth:</label>
              <input type="date" id="dob" name="dob" required><br><br>

              <label for="grad_year">Graduation Year:</label>
              <input type="number" id="grad_year" name="grad_year" min="1900" max="2100" required><br><br>

            <label for="campus">Campus:</label>
              <select id="campus" name="campus" required>
                <option value="" selected="selected" hidden="hidden">Choose here</option>
                <option value="B&oslash;">B&oslash; Campus</option>
                <option value="Drammen">Drammen Campus</option>
                <option value="Kongsberg">Kongsberg Campus</option>
                <option value="Notodden">Notodden Campus</option>
                <option value="Vestfold">Vestfold Campus</option>
                <option value="Porsgrunn">Porsgrunn Campus</option>
                <option value="Rauland">Rauland Campus</option>
                <option value="Ringerike">Ringerike Campus</option>
                <option value="none">No affiliation</option>
              </select><br><br>

              <label for="study">Study:</label>
              <input type="text" id="study" name="study" required><br><br>

              <input type="submit" value="Update">
            </fieldset>
          </form>
        </div>

        <div id="answeredPolls">
